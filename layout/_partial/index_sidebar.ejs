<div class="container profile-card post-card p-0 text-center">
    <div class="profile-bg-container" style="width: 100%; height: 200px;">
        <div class="self-profile-icon">
            <img src="<%= theme.profile_icon %>">
        </div>
    </div>
    

    <div class="intro">
        <h5 class="intro-author my-2"><%= theme.author %></h5>
        <p class="intro-description my-2"><%= theme.description %></p>
    </div>

    <div class="container my-3">
        <div class="row">
            <div class="col my-0">
                <p class="font-bold mb-1">文章</p>
                <p class="clear-margin"><%= site.posts.length %></p>
            </div>
            <div class="col col-border">
                <p class="font-bold mb-1">分类</p>
                <p class="clear-margin"><%= site.tags.length %></p>
            </div>
            <div class="col">
                <p class="font-bold mb-1">标签</p>
                <p class="clear-margin"><%- site.categories.length %> </p>
            </div>
        </div>
    </div>
</div>

