<% if (theme.enable_tag_cloud && site.tags.length > 3) { %> 
<div class="container tag-cloud post-card text-center py-3 secondary-title-color">
    <%- partial('tag_cloud.ejs') %> 
    <%- list_tags(site.tags, {
        show_count: false,
        class: 'smaller-tag',
      }) %>
</div>
<% } %>

<div class="container post-card secondary-title-color">
    <%- partial('../_widget/categories_table.ejs') %> 
</div>


<script>
    var leftBackgroundUrl = '<%- theme.leftBackground %>';
    var homeLeftAsideNode = document.getElementsByClassName('profile-bg-container')[0];
    if (homeLeftAsideNode) {
      homeLeftAsideNode.style.backgroundImage = 'url(' + leftBackgroundUrl + ')';
    }
</script>