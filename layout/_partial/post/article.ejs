<%- partial('article_header.ejs', {post, post}) %> 
<div class="container">
    <div class="row justify-content-between">
        <div class="col-9">
            <div class="post-card p-4">
                <div class="article-content">
                    <%- post.content %>
                </div>
        
                <% if (theme.enable_gitalk) { %>
                    <div class="article-comments" id="comments">
                        <%- partial('comments.ejs') %>
                    </div>
                <% } %> 
        
                <%- partial('post_paginator.ejs', {post: post}) %> 
            </div>
        </div>
        <div class="col-3">
            <div class="container self-profile-card post-card p-0"> 
                <% if (toc(page.content).length > 1) { %>
                    <%#- toc(page.content, {list_number:false}) %> 
                    <div class="post-toc-wrap" id='toc'>
                        <div class="post-toc">
                            <h3 class="widget-title">
                                <span><%= __('目录') %></span>
                                &nbsp;
                                <a id='tocExpand' href="#">
                                    <i class="fa fa-angle-double-up fa-2x"></i>
                                </a>
                            </h3>
                            <%- toc(page.content, {list_number: false}) %>
                        </div>
                    </div>

                    <%- js('lib/jquery/jquery-3.5.1.min.js') %>
                    <%- js('js/main.js') %>  
                    <script>
                        registerPostTOC();
                    </script>

                <% } %>  
            </div>
        </div>
        <a id="back-to-top" class="btn btn-lg btn-box-shadow" href="#" role="button">
            <img src="<%= config.root %>./images/back-to-top.svg">
        </a>
    </div>
</div>