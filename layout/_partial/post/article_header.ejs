<div class="jumbotron jumbotron-fluid header p-0">
    <div class="article-header-img">
        <div class="cover">

            <!-- 引导栏 -->
            <ul class="nav justify-content-end nav-btn fixed-top" id="navigation-bar">
                <% for (var menu in theme.menus) { %>
                    <% var segs = theme.menus[menu].split("||") %>
                    <% var class_type = is_home() && segs[0].trim() == '/' ? "vertical-border-btn active" : "vertical-border-btn" %>
                    <li class="nav-item">
                        <a class="<%= class_type %>" href="<%- url_for(segs[0].trim()) %> ">
                            <% if (segs.length > 1) { %>
                                <i class="<%- segs[1].trim() %>" aria-hidden="true"></i>
                            <%  } %> 
                            <span><%= menu %></span>
                        </a>
                    </li>
                <% } %> 
            </ul>

            <!-- 文章标题 -->
            <div class="article-title">
                <h1><%= post.title %></h1> 
            </div>

            <%- partial('../../_widget/post_info.ejs', {post: post}) %> 
     
        </div>
    </div>
</div>

<script>
    var leftBackgroundUrl = '<%- theme.leftBackground %>';
    var homeLeftAsideNode = document.getElementsByClassName('article-header-img')[0];
    if (homeLeftAsideNode) {
      homeLeftAsideNode.style.backgroundImage = 'url(' + leftBackgroundUrl + ')';
    }
</script>
    