@import "../_theme.styl";

.timeslot 
    width: 75%;
    float: left;
    margin: 0 0 30px;
    padding: 10px 100px 0 0;
    border-top: 3px solid #ddd;
    position: relative;
    span 
        position: absolute;
        right: 0;
        color: #999;

.even 
    float: right;
    padding: 10px 0 0 100px;
    span
        left: 0;

.timeline-list 
    margin-bottom: 0;
    *
        list-style: none;
    &>.timeline-list-item
        position: relative;
        margin-top: 20px;
        padding: 15px 20px 15px 20px;
        border-left: 3px solid #999;
        a
            font-size: 20px;
            color: title-color;
            font-weight: 550;
        span
            font-size: 16px;
            margin-left: 10px;
            font-weight: 550;
            color: #666;
        &:before 
            content: "";
            display: block;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background:#ff6d6d;
            border:2px solid #fff;
            position: absolute;
            left:-9px
            top: 22px
    .timeline-list-child 
        position: relative;
        .timeline-list-item
            margin-top: 20px;
            a
                font-size: 16px;
            span
                font-size: 12px;
                margin-left: 10px;
                font-weight: 550;
                color: #666;


.timeline-section 
    margin: 0 0 50px 120px;
    padding-left: 50px;
    padding-bottom: 10px
    border-left:2px solid btn-color;
    position: relative;
    ul 
        list-style: none;
        margin-top: 25px;
        padding-left: 0;
        margin-bottom: 0;
        li 
            margin-top: 10px;
            margin-bottom: 10px;
            padding-left: 10px;
            position: relative;
            font-size: 18px;
            font-weight: 600;
            a
                color: grey-7;
                text-decoration: none;
                &:hover
                    color: btn-color;
            &:before
                content: "";
                display: block;
                width: 6px;
                height: 6px;
                border-radius: 50%;
                border: 2px solid btn-color;
                background:white;
                position: absolute;
                left: -54px
                top: 10px
    .timeline-section-title
        padding-top: 10px;
        padding-bottom: 10px; 
        left: -200px;
        top: 10px;
        color: primary-highlight-btn-bg;
        line-height: 20px;
        position: relative;
        font-weight: 700;
        display: inline;
        &:before 
            content: '';
            position: absolute;
            top: 0;
            left: -25%;
            width: 30px;
            height: 30px;
            z-index: 1;
            border-top: 4px solid primary-btn-bg;
            border-left: 4px solid primary-btn-bg;
        &:after 
            content: '';
            position: absolute;
            bottom: 0;
            right: -25%;
            width: 30px;
            height: 30px;
            z-index: 1;
            border-bottom: 4px solid primary-btn-bg;
            border-right: 4px solid primary-btn-bg;
