.post-card 
    margin: 0 1rem 1rem 1rem;
    box-shadow: 0 3px 7px -1px rgba(0, 0, 0, 0.2);
    background: #fff;
    line-height: 1.4;
    border-radius: 12px;
    overflow: hidden;
    z-index: 0;
    -webkit-transition: all 250ms cubic-bezier(0.02, 0.01, 0.47, 1);
    transition: all 250ms cubic-bezier(.02, .01, .47, 1);
    &:hover
        transform: translate(0, -5x);
        box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.2);
    .card-title-with-divider 
        font: 18px;
        position: relative;
        color: grey-5;
        text-align: center;
        &:before 
            content: "";
            position: absolute;
            width: 28px;
            height: 2px;
            top: 50%;
            left: 10%;
            background-color: grey-4;
        &:after 
            content: "";
            position: absolute;
            width: 28px;
            height: 2px;
            top: 50%;
            right: 10%;
            background-color: grey-4;

.card-narrow-content 
    width: 60%;
    margin: 0 auto;
    padding-top: 50px;