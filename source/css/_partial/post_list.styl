@import "../_theme.styl";

.index-content
    line-height: 3;
    a, a:hover
        text-decoration: none;

.plain-text-card {
    padding: 0 1rem 1rem 1rem;
}

.blog-card 
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    .meta 
        position: relative;
        z-index: 0;
        height: 200px;
    .photo 
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-size: cover;
        background-position: center;
        -webkit-transition: -webkit-transform 0.2s;
        transition: -webkit-transform 0.2s;
        transition: transform 0.2s;
        transition: transform 0.2s, -webkit-transform 0.2s;
    .description 
        padding: 0 1rem 1rem 1rem;
        background: #fff;
        position: relative;
        z-index: 1;
  
@media (min-width: 640px)
    .blog-card 
        -webkit-box-orient: horizontal;
        -webkit-box-direction: normal;
        flex-direction: row;
        max-width: 800px;
        .meta
            flex-basis: 40%;
            height: auto;
        .description 
            flex-basis: 60%;
            &:before 
                -webkit-transform: skewX(-3deg);
                transform: skewX(-3deg);
                content: "";
                background: #fff;
                width: 30px;
                position: absolute;
                left: -10px;
                top: 0;
                bottom: 0;
                z-index: -1;
        &.alt
            -webkit-box-orient: horizontal;
            -webkit-box-direction: reverse;
            flex-direction: row-reverse;
            .description:before 
                left: inherit;
                right: -10px;
                -webkit-transform: skew(4deg);
                transform: skew(4deg);
            .details
                padding-left: 25px;

#title-content 
    margin-top: 0.5rem;
    display: inline-block;
    font-size: 22px;
    font-weight: bold;
    line-height: 1.5; 
    color: title-color;
    position: relative;
    &:hover
        color: #21D4FD;
        background: title-highlight-linear-bg;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;

.post-info 
    font-size: 12px;
    margin-top: 10px;
    margin-bottom: 10px;
    font-weight: 550;
    span, i, a
        font-size: 12px;
        color: post-info-color;