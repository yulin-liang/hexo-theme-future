@import "../_theme.styl";

.smaller-tag-list,
.tag-list 
    padding-left: 0;
    display: flex;
    flex-wrap: wrap;
    li
        list-style: none;
        display: flex;
        position: relative;
        border-radius: 4px;
        margin: 10px;
        background: lightgrey;
        border: 1px solid grey-4;
        overflow: true
        span 
            background: #fff;
            position: absolute;
            right: 0px;
            top: 0px;
            height: 100%;
            line-height: 16px;
            vertical-align: middle;
            text-align:center
            border-left: 1px solid grey-4;
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
            padding-top: 7px;
            padding-left: 12px;
            padding-right: 12px;
            pointer-events: none;
        &:nth-child(10n+1)
            background: tag-1-bg;
            a
                color: tag-1-font-color;
            &:hover
                background: tag-1-font-color;
                span
                    background: tag-1-font-color;
                    color:  btn-highlight-color;
        &:nth-child(10n+2)
            background: tag-2-bg;
            a
                color: tag-2-font-color;
            &:hover
                background: tag-2-font-color;
                span
                    background: tag-2-font-color;
                    color:  btn-highlight-color;
