        &:nth-child(10n+5)
            background: tag-5-bg;
            a
                color: tag-5-font-color;
            &:hover
                background: tag-5-font-color;
                span
                    background: tag-5-font-color;
                    color:  btn-highlight-color;
        &:nth-child(10n+6)
            background: tag-6-bg;
            a
                color: tag-6-font-color;
            &:hover
                background: tag-6-font-color;
                span
                    background: tag-6-font-color;
                    color:  btn-highlight-color;
