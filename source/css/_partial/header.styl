@import "../_theme.styl";

/* #################### 首页头部 #################### */

.img-container 
    width: 100%;
    height: 450px;
    background-repeat: no-repeat;
    background-size: cover;
    .cover 
        background: banner-cover-color;
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        height: 450px;
        color: banner-font-color;
        &:after
            position: absolute
            left 0
            bottom: 0
            background: blue
            height: 10%
            width: 100%

.article-header-img 
    width: 100%;
    height: 350px;
    background-repeat: no-repeat;
    background-size: cover;
    .cover 
        background: banner-cover-color;
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        height: 350px;
        color: banner-font-color;
        .article-title
            text-align: center;
            padding: 100px 50px 20px 50px;
            h1  
                color: #fff;
                font-size: 40px;

        .article-subtitle
            margin: 10px;
        .article-subtitle-item 
            margin: 10px;

        .article-info
            font-size: 14px;
            margin-top: 5px;
            font-weight: 550;
            span, i, a
                font-size: 14px;
                color: white
            .separator
                color: #fff;
                margin-left: 5px;
                margin-right: 5px;

#navigation-bar
    padding: 15px;
    a
        padding: 10px 20px 10px 20px;
        text-decoration: none;
        color: banner-btn-color;
        span 
            padding-left: 5px;
            font-weight: 800;
        i 
            font-size: 18px;
            color: banner-btn-color;
            align-self: center;
        &:hover
            color: #fafafa;
    &.scrolled
        background-image: sticky-banner-bg-color !important;
        transition: background-color 200ms linear;
        i 
            color: sticky-banner-btn-color;
        a
            color: sticky-banner-btn-color;
            &:hover, &hover i 
                color: sticky-banner-highlight-color;
              
.header-margin
    position: relative
    top: 100px 
.post-header-margin {
    margin-top: 200px;
}
.profile-icon
    img 
        border-radius: 50%;
        height: 120px;
        width: 120px;
        transition: transform ease-in-out 0.4s;
        padding: 5px;
        background: banner-font-color;
        box-shadow: 0 0 5px #95a5a6;   
    img
        &:hover 
            -webkit-transform: translate(0px, -10px);
            transform: translate(0px, -10px);
.intro-author 
        margin: 30px 0 30px;
.social-media
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100px;
    .nav-item
        text-decoration: none;
        list-style: none;
        margin: 5px 20px 5px 20px;
        img 
            border-radius: 50%;
            width: 50px;
            height: 50px;
            padding: 10px;
            filter: invert(99%) sepia(1%) saturate(76%) hue-rotate(269deg) brightness(117%) contrast(89%);
        a
            &:hover 
                img 
                    color: banner-btn-color;

    
