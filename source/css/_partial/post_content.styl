@import "../_theme.styl";

.article-content
    padding-bottom: 1rem;
    h1, h2, h3
        padding-bottom: 0.75rem;
        margin: 1.25rem 0 1.25rem; 
        font-weight: 700;
        border-bottom: 1px solid grey-4;
    blockquote 
        padding: 15px 20px !important;
        margin: 20px 0;
        background-color: #F6F6F6;
        border-left: 8px solid #78C0A8;
        border-radius: 3px;
        word-break: break-word; 
        color: #555555;
        background:#EDEDED;
        p:first-child 
            margin-top: 0; 
        p:last-child 
            margin-bottom: 0; 
        span
            display:block;
            color:#555555;
            font-style: normal;
            font-weight: bold;
            margin-top:1.4em;
    img 
        padding: 3px;
        border: 1px solid #ddd;
        max-width: 100%;
        margin: 16px auto 16px;
        display: block;
    span
        .img-alt
            max-width: 80%;
            position: relative;
            left: 50%;
            -webkit-transform: translateX(-50%);
            transform: translateX(-50%);
            display: inline-block;
            padding: 0px 0 2px;
            border-bottom: 1px solid #d9d9d9;
            font-size: 12px;
            color: #969696; 
    code
        padding: 3px 5px;
        font-size: 0.85em;
        background-color: inline-code-bg;
        color: inline-code-font-color;
        font-weight: 600;
        border-radius: 4px; 
    pre 
        border-radius: 8px;
        margin: 16px auto 16px !important;
    a
        text-decoration: none;
        background: link-background;
        &:hover
            text-decoration: none;
    ol, ul
        margin: 30px 0;
        padding-left: 20px;
        li
            color: #555;
            margin: 8px 0; 
            &:first-child
                margin-top: 0
            &:last-child
                margin-bottom: 0
    .image-caption 
        width: 31%;
        min-width: 20%;
        padding: 10px;
        text-align: center;
        border-bottom: 1px solid #d9d9d9;
        font-size: 13px;
        color: #999999;
        font-style: italic;
        line-height: 1.7;
        margin: 0 auto 20px;
    table
        width: 100%;
        border: 1px #E6E6E6 solid;
        border-collapse: collapse; 
    th 
        background: #F3F3F3;
        text-align: left;
        border: 1px solid #E6E6E6;
        padding: 5px 8px;
        word-break: normal;
    td
        border: 1px solid #E6E6E6;
        padding: 5px 8px;
        word-break: normal;  


.article-navigation 
    border-top: 1px solid #E6E6E6;
    padding-bottom: 80px;


        
